{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./lib",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/schemas/branches.json",
    "src/schemas/commands.json",
    "src/schemas/pm.json",
    "src/schemas/project.json"
  ],
  "exclude": [
    "node_modules",
    "./lib/**/*",
    "**/*.spec.ts"
  ],
  "lib": ["es2015"]
}
